void test_loops(){

    int sum = 0;
    for(int i = 0; i < 10; i++){
        sum += i;
    }
    print_testi(sum, 45, "for increasing");

    for(int j = 9; j >= 0; j--){
        sum -= j;
    }
    print_testi(sum, 0, "for decreasing");

    int k = 0;
    while(k < 10){
        k++;
        sum += k;
    }
    print_testi(sum, 55, "while increasing");

    while(k >= 0){
        k--;
        sum -= k;
    }
    print_testi(sum, 11, "while decreasing");

}

