void test_assign(){

    // assign to index
    int * a = malloc(16);
    a[1] = 5;
    print_testi(a[1], 5, "assign int pointer");

    float * b = malloc(16);
    b[1] = 5.25;
    print_testf(b[1], 5.25, "assign float pointer");

    // assign to struct
    Foo foo;
    foo.a = 5;
    foo.b = 10;
    print_testi(foo.a, 5, "assign to struct");

    Bar bar;
    bar.foo = foo;
    print_testi(bar.foo.a, 5, "bar.foo = foo");

    foo.a = 3;
    foo.b = 1;
    foo = bar.foo;
    print_testi(foo.a + foo.b, 15, "foo = bar.foo");
    foo.a = 6;
    print_testi(bar.foo.a + bar.foo.b, 15, "change struct var after assignment");



    // assign to float
    float f = 5.25;
    print_testf(f, 5.25, "assign float");

    // assign to argument
    test_assign_argument(2, 2.0);
    // assign to dereference

    int * p = malloc(16);
    int ** p2 = &p;
    int *** p3 = &p2;
    (**p3)[1] = 2;
    print_testi(p[1], 2, "assign dereference");


}

void test_augmented(){

    int a = 5;

    a += 3;
    print_testi(a, 8, "+=");

    a -= 2;
    print_testi(a, 6, "-=");


    a /= 6;
    print_testi(a, 1, "/=");

    a ^= 6;
    print_testi(a, 7, "^=");

    a &= 5;
    print_testi(a, 5, "&=");

    a |= 8;
    print_testi(a, 13, "|=");

}

void test_logical(){


    int a;
    // &&
    if(2 == 2 && 3 <= 5){
        a = 1;
    }else{
        a = 0;
    }
    print_testi(a, 1, "logical and");

    if(2 > 2 && 3 <= 5){
        a = 1;
    }else{
        a = 0;
    }
    print_testi(a, 0, "logical and short circuited");

    if(2 > 2 && 3 == 5){
        a = 1;
    }else{
        a = 0;
    }
    print_testi(a, 0, "logical and both fail");

    // ||
    if(2 < 2 || 3 >= 5){
        a = 1;
    }else{
        a = 0;
    }
    print_testi(a, 0, "logical or false");

    if(2 != 2 || 3 <= 5){
        a = 1;
    }else{
        a = 0;
    }
    print_testi(a, 1, "logical or snd is true");

    if(2 == 2 || 3 > 5){
        a = 1;
    }else{
        a = 0;
    }
    print_testi(a, 1, "logical or short circuit");


}

