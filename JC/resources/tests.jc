void test_postfix(){
    int a = 5;
    a++;
    print_testi(a, 6, "a++");

    int * b = &a;
    (*b)++;
    print_testi(*b, 7, "*b++");

    Foo foo;
    foo.a = 5;
    foo.a++;
    print_testi(foo.a, 6, "foo.a++");

    Foo *foo1 = malloc(16);
    foo1[0].a++;
    print_testi(foo1[0].a, 1, "foo1[0].a++");

    float c = 5;
    c++;
    print_testf(c, 6.0, "b++");

    float * d = &c;
    (*d)++;
    print_testf(*d, 7.0, "(*d)++");

    Foof foo2;
    foo2.a = 5.0;
    foo2.a++;
    print_testf(foo2.a, 6.0, "foo2.a++");

    Foof *foo3 = malloc(16);
    foo3[0].a = 0.0;
    foo3[0].a++;
    print_testf(foo3[0].a, 1.0, "foo3[0].a++");

    byte ba = 5;
    ba++;
    print_testb(ba, 6, "a++");

    byte * bb = &ba;
    (*bb)++;
    print_testb(*bb, 7, "*b++");

    Foob foob;
    foob.a = 5;
    foob.a++;
    print_testb(foob.a, 6, "foob.a++");

    Foob *foob1 = malloc(16);
    foob1[0].a++;
    print_testb(foob1[0].a, 1, "foob1[0].a++");

    int arr[2] = [1,2];
    arr[1]++;
    print_testi(arr[1], 3, "arr[1]++");

    byte barr[2] = [1,2];
    barr[1]++;
    print_testi(barr[1], 3, "barr[1]++");

    float farr[2] = [1,2];
    farr[1]++;
    print_testf(farr[1], 3.0, "farr[1]++");

    int k = foo.a++;
    print_testi(k, 6, "k = foo.a++ (k)");
    print_testi(foo.a, 7, "k = foo.a++ (foo.a)");

    int *l = &k;
    int x = (*l)++;
    print_testi(x, 6, "(*l)++");
    int y = l[0]++;
    print_testi(y, 7, "l[0]++");

    k = 6;
    int *l2 = &k;
    int x2 = ++(*l2);
    print_testi(x2, 7, "++(*l2)");
    int y2 = ++l2[0];
    print_testi(y2, 8, "++l2[0]");

}

